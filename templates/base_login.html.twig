<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">
        
        <title>{% block title %}Mobelite labs{% endblock %}</title>
        
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet">
            <link rel="icon" href="{{ asset('assets/images/favicon.ico') }}" type="image/x-icon">
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/bower_components/bootstrap/css/bootstrap.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/icon/themify-icons/themify-icons.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/icon/icofont/css/icofont.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style_1.css') }}">
        {% endblock %}
    </head>
    <body class="flat fix-menu">
        <div id="particles-js"></div>
        <div class="content">
            <div class="content-box">
                <div class="big-content">
                    <div class="login-card card-block auth-body">
                        {% block body %}
                        {% endblock %}
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
        {% block javascripts %}
            <script src="{{ asset('assets/js/login/js/jquery.min.js') }}"></script>
            <script src="{{ asset('assets/js/login/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('assets/js/login/js/particles.js') }}"></script>
        {% endblock %}
    </body>
</html>
